pipeline {
    agent any

    environment {
        // Get the Deploy Hook from Jenkins Credentials
        RENDER_DEPLOY_HOOK_URL = credentials('render-deploy-hook')
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate && pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                // Run your tests with pytest
                sh '. venv/bin/activate && pytest'
            }
        }

        stage('Deploy to Render') {
            steps {
                echo 'Tests passed. Triggering Render deployment...'
                // Call the Render Deploy Hook URL to start the deployment
                sh "curl -X POST ${RENDER_DEPLOY_HOOK_URL}"
            }
        }
    }
}